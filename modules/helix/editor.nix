{
  cursorline = true;
  auto-save = true;
  line-number = "relative";
  color-modes = true;
  file-picker.hidden = false;
  indent-guides = {
    render = true;
    character = "╎";
  };
  soft-wrap.enable = false;
  whitespace.render = {
    space = "none";
    tab = "none";
    newline = "all";
  };
  whitespace.characters = {
    newline = "↩";
  };
}
